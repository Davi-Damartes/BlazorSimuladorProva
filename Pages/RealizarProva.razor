@page "/RealizarProva"
@inject ProvaService Prova

@if (Prova.ProvaInstancia.Perguntas.Count() == 0)
{
    <MudText Typo="Typo.h3"
             Class="d-flex align-center justify-center"
             Color="Color.Warning">
        Não há perguntas criadas!
    </MudText>

    <MudButton ButtonType="ButtonType.Button"
               Variant="Variant.Filled"
               Color="Color.Error"
               Size="Size.Small"
               Href="/CriarPerguntas"
               Class="d-flex align-center"
               Style="margin-top: 15px;">
        Clique Aqui para Adicionar Perguntas!
    </MudButton>

}
else
{
 
    <MudPaper Height="100%" Width="100%" 
            Style="@($"color:{Theme.Palette.Error}; background:{Colors.Cyan.Darken2};")">
        <MudContainer MaxWidth="MaxWidth.Medium" Height="100%">
            <MudPaper Elevation="15" Class="pa-4" Height="100%" Width="100%"
                      Style="@($"color:{Theme.Palette.Tertiary}; background:{Colors.Shades.White};")">

                @{
                    int contador = 1; // Inicializa o contador
                }
            
                @foreach (var pergunta in Prova.ProvaInstancia.Perguntas)
                {
                    <MudText Class="mb-5" Style="@($"color:{Theme.Palette.DarkDarken}; font-size: 25px")">
                        (@contador) <b>@pergunta.EnunciadoDaPergunta</b>
                    </MudText>
                     contador++;
                    @foreach (var questao in pergunta.Questoes)
                    {
                        @foreach (var alternativa in questao.ListaAlternativas)
                        { <MudGrid>
                                <MudItem xs="12" Class="mud-elevation-4 mud-spacing">
                                    <MudText Class="mb-5"
                                        Align="Align.Center"
                                        Style="@($"color:{Theme.Palette.Dark}; background:{Colors.Shades.White}; font-size: 21px word-wrap: break-word; white-space: pre-wrap;")">
                                        @alternativa.OpcaoAlternativa.ToString()) @alternativa.TextoDasAlternativa
                                    </MudText>
                                </MudItem>
                            </MudGrid>
                        }
                        <MudDivider 
                            Style="@($"color:{Theme.Palette.Dark}; background:{Colors.Shades.White}; margin-bottom: 60px")">
                        </MudDivider>
                    }

                }
            </MudPaper>
        </MudContainer>
    </MudPaper>

}
@code {
    public MudTheme Theme = new MudTheme();


}


