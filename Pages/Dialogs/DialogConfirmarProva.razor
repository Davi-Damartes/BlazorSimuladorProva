@inject IDialogService DialogSerbive

@inject ISnackbar Snackbar
@inject NavigationManager NavigationManager

<MudDialog>
    <TitleContent>
        <MudText Style="text-align:center;"
                 Typo="Typo.h6">
            <b>@Titulo</b>
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudText>@Conteudo</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancelar">
            Cancelar
        </MudButton>
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="MensagemConfirmacaoAsync">
            Confirmar Envio!
        </MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter]
    private MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public string? Titulo { get; set; }

    [Parameter]
    public string? Conteudo { get; set; }


    [Parameter]
    public string? ButtonText { get; set; }

    [Parameter]
    public Color Color { get; set; }



