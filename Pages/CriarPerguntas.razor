@page "/CriarPerguntas"
@inject ProvaService Prova
@inject NavigationManager NavigationManager


<PageTitle>Criar Perguntas </PageTitle>

@if (string.IsNullOrEmpty(Prova.ProvaInstancia.NomeProfessor))
{
    NavigationManager.NavigateTo("/CriarProva");
}
else if (Prova.ProvaInstancia.ProvaCriada == true)
{
    NavigationManager.NavigateTo("/RealizarProva");
}
else
{
    <MudText Class="mt-5 d-flex align-center justify-center"
             Typo="Typo.h3">
            Criar as perguntas da Prova @Prova.ProvaInstancia.TipoProva.ToString().Replace("_", " ") 
    </MudText>
    @for (int x = 1; x <= Prova.ProvaInstancia.QuantidadePerguntas; x++)
    {
        <CriarPerguntasProva NumeroQuestao="@x"> </CriarPerguntasProva>

    }
}